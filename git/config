[user]
	name =  # user.name
	email = # user.email

[core]
	editor = vim
	filemode = false
	pager = delta
	# autocrlf = true    # enable this line in Windows

[interactive]
	diffFilter = delta --color-only

[tig]
	main-view-id = yes
	main-view-date = custom
	main-view-date-format = "%y%m%d"
	main-view-author = abbreviated
	tab-size = 4

[tig "bind"]
	generic = D >git show --patch-with-stat %(commit)

[delta]
	navigate = true
	light = true
	side-by-side = true
	line-numbers = true
	wrap-max-lines = 0

[diff]
	tool = pdifftool_diff

[merge]
	tool = pdifftool_merge

[mergetool]
	keepBackup = false

[difftool "pdifftool_diff"]
	cmd = pdifftool $LOCAL $REMOTE

[mergetool "pdifftool_merge"]
	cmd = pdifftool $LOCAL $BASE $REMOTE $MERGED

